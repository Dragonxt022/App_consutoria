<div class="max-w-4xl mx-auto bg-white shadow-2xl rounded-2xl overflow-hidden mt-8">
    <div class="relative h-64 md:h-96">
        <img src="<%= course.image || 'https://images.unsplash.com/photo-1454165833767-02a0ef84c330?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80' %>" alt="<%= course.title %>" class="w-full h-full object-cover">
        
        <% if (course.isExpired) { %>
            <div class="absolute top-6 right-6 bg-red-600 text-white px-6 py-2 rounded-full font-bold shadow-xl flex items-center animate-pulse">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                Inscrições Encerradas
            </div>
        <% } %>

        <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent flex items-end p-8">
            <div>
                <nav class="flex mb-4 text-sm text-gray-300" aria-label="Breadcrumb">
                    <ol class="flex list-none p-0">
                        <li class="flex items-center">
                            <a href="/" class="hover:text-white">Início</a>
                            <svg class="h-5 w-5 mx-2" fill="currentColor" viewBox="0 0 20 20"><path d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"/></svg>
                        </li>
                        <li class="flex items-center">
                            <span class="text-white">Cursos</span>
                        </li>
                    </ol>
                </nav>
                <h1 class="text-3xl md:text-5xl font-bold text-white"><%= course.title %></h1>
            </div>
        </div>
    </div>

    <div class="p-8 grid md:grid-cols-3 gap-8">
        <div class="md:col-span-2 space-y-6">
            <section>
                <h2 class="text-2xl font-bold text-gray-900 mb-4">Sobre o Curso</h2>
                <div class="text-lg text-gray-600 leading-relaxed whitespace-pre-line">
                    <%= course.description %>
                </div>
            </section>

            <section class="bg-indigo-50 p-6 rounded-xl border border-indigo-100">
                <h3 class="text-lg font-bold text-indigo-900 mb-4">Informações Importantes</h3>
                <ul class="space-y-3">
                    <li class="flex items-center text-indigo-700">
                        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                        <strong>Data de Início:</strong> <span class="ml-2"><%= new Date(course.startDate).toLocaleDateString('pt-BR') %></span>
                    </li>
                    <li class="flex items-center text-indigo-700">
                        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                        <strong>Local:</strong> <span class="ml-2"><%= course.location %></span>
                    </li>
                    <li class="flex items-center text-indigo-700">
                        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                        <strong>Carga Horária:</strong> <span class="ml-2"><%= course.workload %></span>
                    </li>
                    <li class="flex items-center text-indigo-700">
                        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 21v-2a4 4 0 00-4-4H5a4 4 0 00-4 4v2mee 0a3 3 0 100-6 3 3 0 000 6zm2-3a2 2 0 11-4 0 2 2 0 014 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-9a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                        <strong>Vagas Totais:</strong> <span class="ml-2"><%= course.spots %></span>
                    </li>
                </ul>
            </section>
        </div>

        <div class="space-y-6">
            <div class="bg-gray-50 p-6 rounded-xl shadow-inner border border-gray-200">
                <div class="text-center mb-6">
                    <span class="text-sm text-gray-500 block uppercase tracking-wider">Investimento</span>
                    <span class="text-3xl font-bold text-gray-900"><%= course.price %></span>
                </div>
                
                <div class="space-y-4">
                    <% if (course.proposalDoc) { %>
                        <a href="<%= course.proposalDoc %>" download class="w-full flex items-center justify-center px-4 py-3 border-2 border-indigo-600 text-indigo-600 font-bold rounded-lg hover:bg-indigo-50 transition-colors">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"></path></svg>
                            Baixar Proposta (PDF)
                        </a>
                    <% } %>

                    <% if (course.isExpired) { %>
                        <button disabled class="w-full flex items-center justify-center px-4 py-3 bg-gray-400 text-white font-bold rounded-lg cursor-not-allowed uppercase text-sm">
                            Inscrições Encerradas
                        </button>
                    <% } else { %>
                        <a href="/inscrever/<%= course.id %>" class="w-full flex items-center justify-center px-4 py-3 bg-indigo-600 text-white font-bold rounded-lg hover:bg-indigo-700 shadow-lg transform active:scale-95 transition-all">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg>
                            Quero me Inscrever
                        </a>
                    <% } %>
                </div>
            </div>

            <div class="text-sm text-gray-500">
                <h4 class="font-bold mb-2">Incluso:</h4>
                <ul class="space-y-1">
                    <% course.itemsIncluded.forEach(item => { %>
                        <li class="flex items-center"><svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path></svg> <%= item %></li>
                    <% }) %>
                </ul>
            </div>
        </div>
    </div>
</div>
