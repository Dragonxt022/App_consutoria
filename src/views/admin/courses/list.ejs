<div class="bg-white shadow-md rounded-xl overflow-hidden">
    <div class="p-6 border-b border-gray-100 flex justify-between items-center bg-gray-50/50">
        <h2 class="text-xl font-bold text-gray-800">Cursos Presenciais</h2>
        <a href="/admin/cursos/criar" class="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-lg text-sm font-bold transition-all shadow-lg shadow-indigo-100 flex items-center">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M12 4v16m8-8H4"></path></svg>
            Novo Curso
        </a>
    </div>

    <div class="overflow-x-auto">
        <table class="w-full text-left">
            <thead class="bg-gray-50 text-gray-500 uppercase text-xs font-bold">
                <tr>
                    <th class="px-6 py-4">Curso</th>
                    <th class="px-6 py-4">Data Início</th>
                    <th class="px-6 py-4">Status</th>
                    <th class="px-6 py-4">Vagas</th>
                    <th class="px-6 py-4">Investimento</th>
                    <th class="px-6 py-4 text-right">Ações</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
                <% courses.forEach(course => { %>
                    <tr class="hover:bg-gray-50/50 transition-colors">
                        <td class="px-6 py-4">
                            <div class="flex items-center">
                                <div class="h-10 w-16 bg-gray-200 rounded overflow-hidden mr-3">
                                    <% if (course.image) { %>
                                        <img src="<%= course.image %>" class="h-full w-full object-cover">
                                    <% } %>
                                </div>
                                <div>
                                    <div class="text-sm font-bold text-gray-900"><%= course.title %></div>
                                    <div class="text-xs text-gray-500"><%= course.location %></div>
                                </div>
                            </div>
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-600">
                            <%= new Date(course.startDate).toLocaleDateString('pt-BR') %>
                        </td>
                        <td class="px-6 py-4">
                            <% if (course.isExpired) { %>
                                <span class="px-2.5 py-0.5 rounded-full text-xs font-bold bg-red-100 text-red-700 uppercase tracking-wider">Encerrado</span>
                            <% } else { %>
                                <span class="px-2.5 py-0.5 rounded-full text-xs font-bold bg-green-100 text-green-700 uppercase tracking-wider">Ativo</span>
                            <% } %>
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-600">
                            <%= course.spots %>
                        </td>
                        <td class="px-6 py-4 text-sm font-bold text-gray-900">
                            <%= course.price %>
                        </td>
                        <td class="px-6 py-4 text-right">
                            <button class="text-gray-400 hover:text-indigo-600 transition-colors">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg>
                            </button>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    <% if (pagination.totalPages > 1) { %>
        <div class="p-6 border-t border-gray-100 bg-gray-50 flex justify-between items-center">
            <span class="text-sm text-gray-500">Mostrando página <%= pagination.currentPage %> de <%= pagination.totalPages %></span>
            <div class="flex space-x-2">
                <% for(let i = 1; i <= pagination.totalPages; i++) { %>
                    <a href="?page=<%= i %>" class="px-3 py-1 rounded <%= pagination.currentPage === i ? 'bg-indigo-600 text-white' : 'bg-white text-gray-600 hover:bg-gray-100' %> text-sm font-bold border border-gray-200 shadow-sm">
                        <%= i %>
                    </a>
                <% } %>
            </div>
        </div>
    <% } %>
</div>
