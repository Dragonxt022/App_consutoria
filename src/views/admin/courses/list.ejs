<div class="bg-white shadow-md rounded-xl overflow-hidden">
    <!-- Header Mobile & Desktop -->
    <div class="p-4 md:p-6 border-b border-gray-100 bg-gray-50/50 flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
        <div>
            <h2 class="text-lg md:text-xl font-bold text-gray-800">Cursos Presenciais</h2>
            <p class="text-xs md:text-sm text-gray-500 mt-1">Total: <%= courses.length %> curso(s)</p>
        </div>
        <a href="/admin/cursos/criar" class="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-3 md:py-2 rounded-lg text-sm font-bold transition-all shadow-lg shadow-indigo-100 flex items-center justify-center w-full md:w-auto btn-touch">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M12 4v16m8-8H4"></path></svg>
            Novo Curso
        </a>
    </div>

    <!-- Mobile Cards View -->
    <div class="md:hidden">
        <% if (courses.length === 0) { %>
            <div class="p-8 text-center">
                <svg class="w-12 h-12 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                </svg>
                <p class="text-gray-500">Nenhum curso cadastrado</p>
                <a href="/admin/cursos/criar" class="mt-4 inline-block text-indigo-600 font-medium">Criar primeiro curso</a>
            </div>
        <% } else { %>
            <div class="divide-y divide-gray-100">
                <% courses.forEach(course => { %>
                <div class="p-4 hover:bg-gray-50/50 transition-colors">
                    <div class="flex items-start space-x-3 mb-3">
                        <div class="h-16 w-20 bg-gray-200 rounded overflow-hidden flex-shrink-0">
                            <%= imgTag(course.image, course.title, 'h-full w-full object-cover', 'course') %>
                        </div>
                        <div class="flex-grow">
                            <h3 class="font-bold text-gray-900 text-sm mb-1"><%= course.title %></h3>
                            <p class="text-xs text-gray-500 mb-2"><%= course.location %></p>
                            <div class="flex items-center space-x-2">
                                <% if (!course.active) { %>
                                    <span class="px-2 py-0.5 rounded-full text-[9px] font-black bg-red-100 text-red-700 uppercase tracking-widest border border-red-200">Desativado</span>
                                <% } else if (course.isExpired) { %>
                                    <span class="px-2 py-0.5 rounded-full text-[9px] font-black bg-amber-100 text-amber-700 uppercase tracking-widest border border-amber-200">Encerrado</span>
                                <% } else { %>
                                    <span class="px-2 py-0.5 rounded-full text-[9px] font-black bg-emerald-100 text-emerald-700 uppercase tracking-widest border border-emerald-200">Ativo</span>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    
                    <div class="grid grid-cols-2 gap-2 mb-4 text-xs">
                        <div class="bg-gray-50 p-2 rounded">
                            <span class="text-gray-500 block">Data Início</span>
                            <span class="font-medium"><%= new Date(course.startDate).toLocaleDateString('pt-BR') %></span>
                        </div>
                        <div class="bg-gray-50 p-2 rounded">
                            <span class="text-gray-500 block">Vagas</span>
                            <span class="font-medium"><%= course.spots %></span>
                        </div>
                        <div class="bg-gray-50 p-2 rounded">
                            <span class="text-gray-500 block">Investimento</span>
                            <span class="font-medium"><%= course.price %></span>
                        </div>
                        <div class="bg-gray-50 p-2 rounded">
                            <span class="text-gray-500 block">Status</span>
                            <span class="font-medium">
                                <% if (!course.active) { %>
                                    Desativado
                                <% } else if (course.isExpired) { %>
                                    Encerrado
                                <% } else { %>
                                    Ativo
                                <% } %>
                            </span>
                        </div>
                    </div>
                    
                    <div class="flex items-center justify-end space-x-2 pt-3 border-t border-gray-100">
                        <a href="/admin/cursos/<%= course.id %>/editar" class="p-2 text-gray-400 hover:text-indigo-600 hover:bg-indigo-50 rounded-lg transition-all" title="Editar Curso">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg>
                        </a>
                        
                        <form action="/admin/cursos/<%= course.id %>/status" method="POST" class="inline">
                            <button type="submit" class="p-2 <%= course.active ? 'text-gray-400 hover:text-amber-600 hover:bg-amber-50' : 'text-gray-400 hover:text-emerald-600 hover:bg-emerald-50' %> rounded-lg transition-all" title="<%= course.active ? 'Desativar' : 'Ativar' %> Curso">
                                <% if(course.active) { %>
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"></path></svg>
                                <% } else { %>
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                                <% } %>
                            </button>
                        </form>

                        <form action="/admin/cursos/<%= course.id %>/deletar" method="POST" class="inline" onsubmit="return confirm('Tem certeza que deseja cancelar/desativar este curso permanentemente?')">
                            <button type="submit" class="p-2 text-gray-400 hover:text-red-600 hover:bg-red-50 rounded-lg transition-all" title="Cancelar Curso">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
                            </button>
                        </form>
                    </div>
                </div>
                <% }) %>
            </div>
        <% } %>
    </div>

    <!-- Desktop Table View -->
    <div class="hidden md:block overflow-x-auto table-responsive">
        <table class="w-full text-left">
            <thead class="bg-gray-50 text-gray-500 uppercase text-xs font-bold">
                <tr>
                    <th class="px-6 py-4">Curso</th>
                    <th class="px-6 py-4">Data Início</th>
                    <th class="px-6 py-4">Status</th>
                    <th class="px-6 py-4">Vagas</th>
                    <th class="px-6 py-4">Investimento</th>
                    <th class="px-6 py-4 text-right">Ações</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
                <% if (courses.length === 0) { %>
                    <tr>
                        <td colspan="6" class="px-6 py-8 text-center text-gray-500">
                            <svg class="w-12 h-12 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                            </svg>
                            <p>Nenhum curso cadastrado</p>
                            <a href="/admin/cursos/criar" class="mt-2 inline-block text-indigo-600 font-medium">Criar primeiro curso</a>
                        </td>
                    </tr>
                <% } %>
                
                <% courses.forEach(course => { %>
                    <tr class="hover:bg-gray-50/50 transition-colors">
                        <td class="px-6 py-4" data-label="Curso">
                            <div class="flex items-center">
                                <div class="h-10 w-16 bg-gray-200 rounded overflow-hidden mr-3 flex-shrink-0">
                                    <%- imgTag(course.image, course.title, 'h-full w-full object-cover', 'course') %>
                                </div>
                                <div class="min-w-0">
                                    <div class="text-sm font-bold text-gray-900 truncate"><%= course.title %></div>
                                    <div class="text-xs text-gray-500 truncate"><%= course.location %></div>
                                </div>
                            </div>
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-600" data-label="Data Início">
                            <%= new Date(course.startDate).toLocaleDateString('pt-BR') %>
                        </td>
                        <td class="px-6 py-4" data-label="Status">
                            <% if (!course.active) { %>
                                <span class="px-2.5 py-0.5 rounded-full text-[10px] font-black bg-red-100 text-red-700 uppercase tracking-widest border border-red-200">Desativado</span>
                            <% } else if (course.isExpired) { %>
                                <span class="px-2.5 py-0.5 rounded-full text-[10px] font-black bg-amber-100 text-amber-700 uppercase tracking-widest border border-amber-200">Encerrado</span>
                            <% } else { %>
                                <span class="px-2.5 py-0.5 rounded-full text-[10px] font-black bg-emerald-100 text-emerald-700 uppercase tracking-widest border border-emerald-200">Ativo</span>
                            <% } %>
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-600" data-label="Vagas">
                            <%= course.spots %>
                        </td>
                        <td class="px-6 py-4 text-sm font-bold text-gray-900" data-label="Investimento">
                            <%= course.price %>
                        </td>
                        <td class="px-6 py-4 text-right actions-cell">
                            <div class="flex items-center justify-end space-x-2">
                                <a href="/admin/cursos/<%= course.id %>/editar" class="p-2 text-gray-400 hover:text-indigo-600 hover:bg-indigo-50 rounded-lg transition-all" title="Editar Curso">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg>
                                </a>
                                
                                <form action="/admin/cursos/<%= course.id %>/status" method="POST" class="inline">
                                    <button type="submit" class="p-2 <%= course.active ? 'text-gray-400 hover:text-amber-600 hover:bg-amber-50' : 'text-gray-400 hover:text-emerald-600 hover:bg-emerald-50' %> rounded-lg transition-all" title="<%= course.active ? 'Desativar' : 'Ativar' %> Curso">
                                        <% if(course.active) { %>
                                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"></path></svg>
                                        <% } else { %>
                                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                                        <% } %>
                                    </button>
                                </form>

                                <form action="/admin/cursos/<%= course.id %>/deletar" method="POST" class="inline" onsubmit="return confirm('Tem certeza que deseja cancelar/desativar este curso permanentemente?')">
                                    <button type="submit" class="p-2 text-gray-400 hover:text-red-600 hover:bg-red-50 rounded-lg transition-all" title="Cancelar Curso">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    <% if (pagination && pagination.totalPages > 1) { %>
        <div class="p-4 md:p-6 border-t border-gray-100 bg-gray-50 flex flex-col md:flex-row justify-between items-center gap-4">
            <span class="text-sm text-gray-500 text-center md:text-left">Mostrando página <%= pagination.currentPage %> de <%= pagination.totalPages %></span>
            <div class="flex flex-wrap justify-center gap-1 md:gap-2">
                <% for(let i = 1; i <= pagination.totalPages; i++) { %>
                    <a href="?page=<%= i %>" class="px-3 py-2 md:py-1 rounded <%= pagination.currentPage === i ? 'bg-indigo-600 text-white' : 'bg-white text-gray-600 hover:bg-gray-100' %> text-sm font-bold border border-gray-200 shadow-sm min-w-[2.5rem] text-center">
                        <%= i %>
                    </a>
                <% } %>
            </div>
        </div>
    <% } %>
</div>

<!-- Mobile search/filter (opcional) -->
<div class="md:hidden fixed bottom-6 right-6 z-30">
    <button id="mobile-filter-toggle" class="bg-indigo-600 text-white p-4 rounded-full shadow-lg shadow-indigo-200">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" /></svg>
    </button>
</div>

<style>
    /* Melhorias para mobile */
    @media (max-width: 640px) {
        .text-sm-mobile {
            font-size: 0.8125rem;
        }
        .p-4-mobile {
            padding: 1rem;
        }
    }
    
    /* Touch-friendly buttons */
    .btn-touch {
        min-height: 44px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }
</style>

<script>
    // Mobile filter toggle (opcional - para futuras funcionalidades de filtro)
    document.getElementById('mobile-filter-toggle')?.addEventListener('click', function() {
        alert('Funcionalidade de filtro para mobile em desenvolvimento!');
    });
    
    // Melhorar experiência tátil em mobile
    document.addEventListener('DOMContentLoaded', function() {
        // Adicionar padding para evitar que elementos fiquem muito próximos das bordas
        const isMobile = window.innerWidth <= 768;
        if (isMobile) {
            // Ajustar qualquer elemento que precise
            document.querySelectorAll('button, a').forEach(el => {
                if (el.offsetWidth < 44 || el.offsetHeight < 44) {
                    el.classList.add('min-h-[44px]', 'min-w-[44px]');
                }
            });
        }
    });
</script>