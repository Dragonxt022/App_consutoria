<div class="bg-white shadow-xl rounded-2xl overflow-hidden">
    <div class="p-6 border-b border-gray-100 bg-gray-50/50">
        <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
            <h2 class="text-xl font-bold text-gray-800">Inscrições Recebidas</h2>
            
            <form action="/admin/inscricoes" method="GET" class="flex flex-wrap gap-2">
                <input type="text" name="search" value="<%= filters.search || '' %>" placeholder="Nome ou e-mail..." class="px-4 py-2 border border-gray-200 rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 transition-all outline-none">
                
                <select name="courseId" class="px-4 py-2 border border-gray-200 rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 transition-all outline-none">
                    <option value="">Todos os cursos</option>
                    <% courses.forEach(course => { %>
                        <option value="<%= course.id %>" <%= filters.courseId == course.id ? 'selected' : '' %>><%= course.title %></option>
                    <% }) %>
                </select>
                
                <button type="submit" class="bg-indigo-600 text-white px-4 py-2 rounded-lg text-sm font-bold hover:bg-indigo-700 transition-all">
                    Filtrar
                </button>
                <% if(filters.search || filters.courseId) { %>
                    <a href="/admin/inscricoes" class="bg-gray-100 text-gray-600 px-4 py-2 rounded-lg text-sm font-bold hover:bg-gray-200 transition-all">Limpar</a>
                <% } %>
            </form>
        </div>
    </div>

    <div class="overflow-x-auto">
        <table class="w-full text-left">
            <thead class="bg-gray-50 text-gray-400 uppercase text-xs font-bold">
                <tr>
                    <th class="px-6 py-4">Estudante</th>
                    <th class="px-6 py-4">Curso Inscrito</th>
                    <th class="px-6 py-4">Data Inscrição</th>
                    <th class="px-6 py-4">Status</th>
                    <th class="px-6 py-4 text-right">Mudar Status</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
                <% enrollments.forEach(enroll => { %>
                    <tr class="hover:bg-gray-50/50 transition-colors">
                        <td class="px-6 py-4">
                            <div class="flex flex-col">
                                <span class="text-sm font-bold text-gray-900"><%= enroll.studentName %></span>
                                <span class="text-xs text-gray-500"><%= enroll.studentEmail %></span>
                                <span class="text-xs text-gray-500"><%= enroll.studentPhone %></span>
                                <% if(enroll.company) { %>
                                    <span class="text-xs px-2 py-0.5 bg-slate-100 rounded text-slate-600 mt-1 w-fit"><%= enroll.company %></span>
                                <% } %>
                            </div>
                        </td>
                        <td class="px-6 py-4">
                            <div class="text-sm font-medium text-gray-700"><%= enroll.Course.title %></div>
                            <div class="text-xs text-gray-400"><%= enroll.Course.location %></div>
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-500">
                            <%= new Date(enroll.createdAt).toLocaleDateString('pt-BR') %>
                        </td>
                        <td class="px-6 py-4">
                            <% 
                                let statusClass = '';
                                switch(enroll.status) {
                                    case 'pendente': statusClass = 'bg-amber-100 text-amber-700'; break;
                                    case 'confirmado': statusClass = 'bg-blue-100 text-blue-700'; break;
                                    case 'completo': statusClass = 'bg-green-100 text-green-700'; break;
                                    case 'cancelado': statusClass = 'bg-red-100 text-red-700'; break;
                                }
                            %>
                            <span class="px-2.5 py-1 rounded-full text-[10px] font-bold uppercase tracking-wider <%= statusClass %>">
                                <%= enroll.status %>
                            </span>
                        </td>
                        <td class="px-6 py-4 text-right flex items-center justify-end gap-3">
                            <% if(enroll.status === 'completo') { %>
                                <a href="/admin/inscricoes/<%= enroll.id %>/json" title="Baixar JSON do Certificado" class="text-indigo-600 hover:text-indigo-800 transition-colors">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path></svg>
                                </a>
                            <% } %>
                            <form action="/admin/inscricoes/<%= enroll.id %>/status" method="POST" class="flex items-center justify-end gap-2">
                                <select name="status" onchange="this.form.submit()" class="text-xs bg-white border border-gray-200 rounded-lg p-1 outline-none">
                                    <option value="pendente" <%= enroll.status === 'pendente' ? 'selected' : '' %>>Pendente</option>
                                    <option value="confirmado" <%= enroll.status === 'confirmado' ? 'selected' : '' %>>Confirmado</option>
                                    <option value="completo" <%= enroll.status === 'completo' ? 'selected' : '' %>>Completo</option>
                                    <option value="cancelado" <%= enroll.status === 'cancelado' ? 'selected' : '' %>>Cancelado</option>
                                </select>
                            </form>
                        </td>
                    </tr>
                <% }) %>
                <% if(enrollments.length === 0) { %>
                    <tr>
                        <td colspan="5" class="px-6 py-10 text-center text-gray-500 italic">Nenhuma inscrição encontrada para os critérios selecionados.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    <% if (pagination.totalPages > 1) { %>
        <div class="p-6 border-t border-gray-50 bg-gray-50 flex justify-between items-center">
            <span class="text-sm text-gray-500">Mostrando página <%= pagination.currentPage %> de <%= pagination.totalPages %></span>
            <div class="flex space-x-2">
                <% for(let i = 1; i <= pagination.totalPages; i++) { %>
                    <a href="?page=<%= i %>&search=<%= filters.search %>&courseId=<%= filters.courseId %>" class="px-3 py-1 rounded <%= pagination.currentPage === i ? 'bg-indigo-600 text-white' : 'bg-white text-gray-600 hover:bg-gray-100' %> text-sm font-bold border border-gray-200">
                        <%= i %>
                    </a>
                <% } %>
            </div>
        </div>
    <% } %>
</div>
