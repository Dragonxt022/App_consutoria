<div class="bg-white shadow-xl rounded-2xl overflow-hidden">
    <div class="p-6 border-b border-gray-100 bg-gray-50/50">
        <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
            <h2 class="text-xl font-bold text-gray-800">Inscrições Recebidas</h2>
            
            <form action="/admin/inscricoes" method="GET" class="flex flex-wrap gap-2">
                <div class="flex items-center gap-4 bg-white p-4 rounded-xl shadow-sm border border-gray-100">
                    <input type="text" name="search" placeholder="Buscar aluno..." value="<%= filters.search || '' %>" class="px-4 py-2 border rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 outline-none">
                    
                    <select name="courseId" class="px-4 py-2 border rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 outline-none">
                        <option value="">Todos os Cursos</option>
                        <% courses.forEach(course => { %>
                            <option value="<%= course.id %>" <%= filters.courseId == course.id ? 'selected' : '' %>><%= course.title %></option>
                        <% }) %>
                    </select>

                    <select name="status" class="px-4 py-2 border rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 outline-none">
                        <option value="">Todos os Status</option>
                        <option value="pendente" <%= filters.status === 'pendente' ? 'selected' : '' %>>Pendente</option>
                        <option value="confirmado" <%= filters.status === 'confirmado' ? 'selected' : '' %>>Confirmado</option>
                        <option value="completo" <%= filters.status === 'completo' ? 'selected' : '' %>>Concluído</option>
                        <option value="cancelado" <%= filters.status === 'cancelado' ? 'selected' : '' %>>Cancelado</option>
                    </select>
                    
                    <button type="submit" class="bg-indigo-600 text-white px-6 py-2 rounded-lg text-sm font-bold hover:bg-indigo-700 transition-colors">Filtrar</button>
                    
                    <% if(filters.search || filters.courseId || filters.status) { %>
                        <a href="/admin/inscricoes" class="text-gray-500 text-sm hover:text-gray-700">Limpar</a>
                    <% } %>
                </div>
            </form>
        </div>
    </div>

    <div class="overflow-x-auto">
        <table class="w-full text-left">
            <thead class="bg-gray-50 text-gray-400 uppercase text-xs font-bold">
                <tr>
                    <th class="px-6 py-4">Estudante</th>
                    <th class="px-6 py-4">Curso Inscrito</th>
                    <th class="px-6 py-4">Data Inscrição</th>
                    <th class="px-6 py-4">Status</th>
                    <th class="px-6 py-4 text-right">Mudar Status</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
                <% enrollments.forEach(enroll => { %>
                    <tr class="hover:bg-gray-50/50 transition-colors">
                        <td class="px-6 py-4">
                            <div class="flex flex-col">
                                <span class="text-sm font-bold text-gray-900"><%= enroll.studentName %></span>
                                <span class="text-xs text-gray-500"><%= enroll.studentEmail %></span>
                                <span class="text-xs text-gray-500"><%= enroll.studentPhone %></span>
                                <% if(enroll.company) { %>
                                    <span class="text-xs px-2 py-0.5 bg-slate-100 rounded text-slate-600 mt-1 w-fit"><%= enroll.company %></span>
                                <% } %>
                            </div>
                        </td>
                        <td class="px-6 py-4">
                            <div class="text-sm font-medium text-gray-700"><%= enroll.Course ? enroll.Course.title : 'Curso Removido' %></div>
                            <div class="text-xs text-gray-400"><%= enroll.Course ? enroll.Course.location : 'N/A' %></div>
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-500">
                            <%= new Date(enroll.createdAt).toLocaleDateString('pt-BR') %>
                        </td>
                        <td class="px-6 py-4">
                            <% 
                                let statusClass = '';
                                switch(enroll.status) {
                                    case 'pendente': statusClass = 'bg-amber-100 text-amber-800'; break;
                                    case 'confirmado': statusClass = 'bg-blue-100 text-blue-800'; break;
                                    case 'completo': statusClass = 'bg-green-100 text-green-800'; break;
                                    case 'cancelado': statusClass = 'bg-red-100 text-red-800'; break;
                                    default: statusClass = 'bg-gray-100 text-gray-800';
                                }
                            %>
                            <span class="px-2.5 py-0.5 rounded-full text-xs font-medium uppercase tracking-wide <%= statusClass %>">
                                <%= enroll.status %>
                            </span>
                            
                            <% if(enroll.status === 'completo' && enroll.certificateCode) { %>
                                <a href="/certificado/<%= enroll.certificateCode %>" target="_blank" class="block mt-2 text-xs font-semibold text-indigo-600 hover:text-indigo-800 flex items-center gap-1 transition-colors">
                                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                                    Ver Certificado
                                </a>
                            <% } %>
                        </td>
                        <td class="px-6 py-4 text-right flex items-center justify-end gap-3">
                            <% if(enroll.status === 'completo') { %>
                                <a href="/admin/inscricoes/<%= enroll.id %>/json" title="Baixar JSON do Certificado" class="text-indigo-600 hover:text-indigo-800 transition-colors">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path></svg>
                                </a>
                            <% } %>
                            <form action="/admin/inscricoes/<%= enroll.id %>/status" method="POST" class="flex items-center justify-end gap-2">
                                <select name="status" onchange="this.form.submit()" class="text-xs bg-white border border-gray-200 rounded-lg p-1 outline-none">
                                    <option value="pendente" <%= enroll.status === 'pendente' ? 'selected' : '' %>>Pendente</option>
                                    <option value="confirmado" <%= enroll.status === 'confirmado' ? 'selected' : '' %>>Confirmado</option>
                                    <option value="completo" <%= enroll.status === 'completo' ? 'selected' : '' %>>Completo</option>
                                    <option value="cancelado" <%= enroll.status === 'cancelado' ? 'selected' : '' %>>Cancelado</option>
                                </select>
                            </form>
                            <a href="/admin/inscricoes/<%= enroll.id %>/editar" title="Editar Inscrição" class="text-blue-600 hover:text-blue-800 transition-colors">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg>
                            </a>
                        </td>
                    </tr>
                <% }) %>
                <% if(enrollments.length === 0) { %>
                    <tr>
                        <td colspan="5" class="px-6 py-10 text-center text-gray-500 italic">Nenhuma inscrição encontrada para os critérios selecionados.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    <% if (pagination.totalPages > 1) { %>
        <div class="p-6 border-t border-gray-50 bg-gray-50 flex justify-between items-center">
            <span class="text-sm text-gray-500">Mostrando página <%= pagination.currentPage %> de <%= pagination.totalPages %></span>
            <div class="flex space-x-2">
                <% for(let i = 1; i <= pagination.totalPages; i++) { %>
                    <a href="?page=<%= i %>&search=<%= filters.search %>&courseId=<%= filters.courseId %>" class="px-3 py-1 rounded <%= pagination.currentPage === i ? 'bg-indigo-600 text-white' : 'bg-white text-gray-600 hover:bg-gray-100' %> text-sm font-bold border border-gray-200">
                        <%= i %>
                    </a>
                <% } %>
            </div>
        </div>
    <% } %>
</div>
