<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    <!-- Stat Card -->
    <div class="bg-white p-6 rounded-2xl shadow-sm border border-slate-100">
        <div class="flex items-center justify-between mb-4">
            <div class="bg-indigo-50 p-3 rounded-lg text-indigo-600">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path></svg>
            </div>
            <span class="text-xs font-bold text-slate-400 uppercase tracking-wider">Cursos</span>
        </div>
        <h3 class="text-3xl font-extrabold text-slate-800"><%= stats.courses %></h3>
        <p class="text-slate-500 text-sm mt-1">Cursos presenciais cadastrados</p>
    </div>

    <div class="bg-white p-6 rounded-2xl shadow-sm border border-slate-100">
        <div class="flex items-center justify-between mb-4">
            <div class="bg-emerald-50 p-3 rounded-lg text-emerald-600">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path></svg>
            </div>
            <span class="text-xs font-bold text-slate-400 uppercase tracking-wider">Alunos</span>
        </div>
        <h3 class="text-3xl font-extrabold text-slate-800"><%= stats.students %></h3>
        <p class="text-slate-500 text-sm mt-1">Total de alunos na base</p>
    </div>

    <div class="bg-white p-6 rounded-2xl shadow-sm border border-slate-100">
        <div class="flex items-center justify-between mb-4">
            <div class="bg-amber-50 p-3 rounded-lg text-amber-600">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path></svg>
            </div>
            <span class="text-xs font-bold text-slate-400 uppercase tracking-wider">Inscrições</span>
        </div>
        <h3 class="text-3xl font-extrabold text-slate-800"><%= stats.enrollments %></h3>
        <p class="text-slate-500 text-sm mt-1">Pré-inscrições pendentes</p>
    </div>
</div>

<div class="mt-12">
    <h2 class="text-xl font-bold text-slate-800 mb-6 font-primary">Ações Rápidas</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <a href="/admin/cursos/criar" class="flex items-center p-4 bg-white rounded-xl border border-slate-100 hover:border-indigo-300 transition-all group">
            <div class="bg-indigo-600 text-white p-2 rounded mr-4">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M12 4v16m8-8H4"></path></svg>
            </div>
            <span class="font-bold text-slate-700 group-hover:text-indigo-600">Cadastrar Novo Curso</span>
        </a>
        <a href="/admin/cursos" class="flex items-center p-4 bg-white rounded-xl border border-slate-100 hover:border-indigo-300 transition-all group">
            <div class="bg-slate-100 text-slate-600 p-2 rounded mr-4">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M4 6h16M4 12h16M4 18h16"></path></svg>
            </div>
            <span class="font-bold text-slate-700 group-hover:text-indigo-600">Gerenciar Listagem</span>
        </a>
    </div>
</div>